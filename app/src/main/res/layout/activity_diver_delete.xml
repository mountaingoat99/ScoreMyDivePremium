<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="NotSibling" >

    <TextView
        android:id="@+id/DeleteDiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/header"
        android:gravity="center"
        android:text="@string/diver_delete"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/header_text" />

    <TextView
        android:id="@+id/deleteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/DeleteDiver"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/header_text" />
    
    <TextView
        android:id="@+id/deleteAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deleteName"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/header_text" />

    <TextView
        android:id="@+id/deleteGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deleteAge"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/header_text" />
    
    <TextView
        android:id="@+id/deleteSchool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deleteGrade"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/header_text" />

    <TextView
        android:id="@+id/Divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deleteSchool"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/header"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/header_text" />

    <Button
        android:id="@+id/buttonDiverDeleteE"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Divider"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:text="@string/delete"
        android:textSize="@dimen/button_text"
        android:textColor="@color/button_text" />

</RelativeLayout>
