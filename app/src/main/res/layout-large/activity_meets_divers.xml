<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rodriguez.scoremydivepremium.MeetsDivers">

    <LinearLayout
        android:id="@+id/layout11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/layer_card_background">

        <TextView
            android:id="@+id/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/enter_diver_meets"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/secondary_text"
            android:background="@color/primary_light"/>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <Button
                android:id="@+id/buttonNewDiver"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/enter_new_diver_info"
                android:textSize="@dimen/button_text_medium"
                android:textColor="@color/primary"
                android:background="@color/primary_light"/>

            <Button
                android:id="@+id/buttonNewMeet"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/enter_new_meet_info"
                android:textSize="@dimen/button_text_medium"
                android:textColor="@color/primary"
                android:background="@color/primary_light"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout11"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:background="@drawable/layer_card_background">

        <TextView
            android:id="@+id/Header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/view_meets_divers"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/secondary_text"
            android:background="@color/primary_light"/>

        <Spinner
            android:id="@+id/spinnerDiverNameW"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:prompt="@string/choose_diver" />

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:visibility="visible">

            <Button
                android:id="@+id/buttonDiverHistory"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/history"
                android:textSize="@dimen/button_text_medium"
                android:textColor="@color/primary"
                android:background="@color/primary_light"/>

            <Button
                android:id="@+id/buttonDiverEdit"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/edit"
                android:textSize="@dimen/button_text_medium"
                android:textColor="@color/primary"
                android:background="@color/primary_light"/>

            <Button
                android:id="@+id/buttonDiverDelete"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delete"
                android:textSize="@dimen/button_text_medium"
                android:textColor="@color/primary"
                android:background="@color/primary_light"/>

        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerMeetNameW"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:prompt="@string/choose_meet" />

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:visibility="visible">

            <Button
                android:id="@+id/buttonMeetHistory"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/history"
                android:textSize="@dimen/button_text_medium"
                android:textColor="@color/primary"
                android:background="@color/primary_light"/>

            <Button
                android:id="@+id/buttonMeetEdit"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/edit"
                android:textSize="@dimen/button_text_medium"
                android:textColor="@color/primary"
                android:background="@color/primary_light"/>

            <Button
                android:id="@+id/buttonMeetDelete"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delete"
                android:textSize="@dimen/button_text_medium"
                android:textColor="@color/primary"
                android:background="@color/primary_light"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
