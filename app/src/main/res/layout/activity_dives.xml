<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/layout11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:paddingRight="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/layer_card_background">

        <TextView
            android:id="@+id/diveDDString"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:text="DD: 1.6"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/secondary_text"
            android:background="@color/primary_light"/>

        <TextView
            android:id="@+id/diveNameString"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:text="103B - Forward Dive"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/secondary_text"
            android:background="@color/primary_light"/>

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@color/primary"/>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/primary_light">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:text="@string/score_1"
                android:textSize="@dimen/text_size_mini"
                android:textColor="@color/secondary_text"
                android:background="@color/primary_light"/>

            <Spinner
                android:id="@+id/editScore1"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/primary_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none"
                android:background="@color/primary_light">
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:text="@string/score_2"
                android:textSize="@dimen/text_size_mini"
                android:textColor="@color/secondary_text"
                android:background="@color/primary_light"/>

            <Spinner
                android:id="@+id/editScore2"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/primary_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none"
                android:background="@color/primary_light">
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/primary_light">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/score3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:text="@string/score_3"
                android:textSize="@dimen/text_size_mini"
                android:textColor="@color/secondary_text"
                android:background="@color/primary_light"/>

            <Spinner
                android:id="@+id/editScore3"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/primary_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none"
                android:background="@color/primary_light">
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/score4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:text="@string/score_4"
                android:textSize="@dimen/text_size_mini"
                android:textColor="@color/secondary_text"
                android:background="@color/primary_light"/>

            <Spinner
                android:id="@+id/editScore4"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/primary_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none"
                android:background="@color/primary_light">
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/primary_light">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/score5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:text="@string/score_5"
                android:textSize="@dimen/text_size_mini"
                android:textColor="@color/secondary_text"
                android:background="@color/primary_light"/>

            <Spinner
                android:id="@+id/editScore5"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/primary_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none"
                android:background="@color/primary_light">
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/score6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:text="@string/score_6"
                android:textSize="@dimen/text_size_mini"
                android:textColor="@color/secondary_text"
                android:background="@color/primary_light"/>

            <Spinner
                android:id="@+id/editScore6"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/primary_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none"
                android:background="@color/primary_light">
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/primary_light">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/score7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:text="@string/score_7"
                android:textSize="@dimen/text_size_mini"
                android:textColor="@color/secondary_text"
                android:background="@color/primary_light"/>

            <Spinner
                android:id="@+id/editScore7"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/primary_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none"
                android:background="@color/primary_light">
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:text="@string/score_6"
                android:textSize="@dimen/text_size_mini"
                android:textColor="@color/secondary_text"
                android:visibility="invisible"
                android:background="@color/primary_light"/>

            <Spinner
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/primary_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none"
                android:visibility="invisible"
                android:background="@color/primary_light">
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

        </LinearLayout>

        <Button
            android:id="@+id/buttonScore"
            android:text="@string/total"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textSize="@dimen/text_size_medium"
            android:layout_gravity="end"
            android:textColor="@color/primary"/>

    </LinearLayout>

</RelativeLayout>



