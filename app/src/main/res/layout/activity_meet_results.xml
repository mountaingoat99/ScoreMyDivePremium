<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    tools:context=".MeetResults" >
    
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp" >
        
    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="2"/>

    <TextView
        android:id="@+id/nameResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text=""
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/random_text"/>
    
    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="1"/>
    
    <TextView
        android:id="@+id/schoolResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text=""
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/random_text"/>
    
    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="2"/>
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp" >
    
    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="2"/>
    
    <TextView
        android:id="@+id/cityResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/random_text"/>
    
    <TextView
        android:id="@+id/StateResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/random_text"/>
    
    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="1"/>

    <TextView
        android:id="@+id/dateResults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text=""
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/random_text"/>
    
    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_weight="2"/>
    
    </LinearLayout>
    
    <View
        android:id="@+id/line1F"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout2"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/header" />
    
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line1F"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:drawSelectorOnTop="false" >

    </ListView>    

</RelativeLayout>
