<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="?android:attr/borderlessButtonStyle"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:ignore="NotSibling" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextViewNewMeet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/header"
            android:gravity="center"
            android:text="@string/choose_meet"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/header_text" />

        <Spinner
            android:id="@+id/spinnerMeetName"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_below="@id/TextViewNewMeet"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:prompt="@string/choose_meet" />

        <TextView
            android:id="@+id/Divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerMeetName"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/header"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/header_text" />

        <Button
            android:id="@+id/buttonChooseJW"
            style="@android:style/Widget.Holo.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/next"
            android:textSize="@dimen/button_text"
            android:textColor="@color/button_text"
            android:layout_below="@id/Divider"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

</ScrollView>