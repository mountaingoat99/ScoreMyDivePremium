<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="NotSibling" >

    <TextView
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/header"
        android:gravity="center"
        android:text="@string/quick_score"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/header_text" />

    <Spinner
        android:id="@+id/spinnerScoreSheets"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/Header"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:prompt="@string/choose_score_sheet" />

    <Button
        android:id="@+id/buttonNewScoreSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerScoreSheets"
        android:text="@string/new_score_sheet"
        android:textSize="@dimen/button_text"
        android:textColor="@color/button_text"
        style="@android:style/Widget.Holo.Button"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
