<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:background="@color/AndroidDarkBlue"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/textView" >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="@string/score_1"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/static_text" />

            <Spinner
                android:id="@+id/editScore1"
                android:layout_width="75dp"
                android:layout_height="42dp"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/random_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none" >
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="@string/score_2"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/static_text" />

            <Spinner
                android:id="@+id/editScore2"
                android:layout_width="75dp"
                android:layout_height="42dp"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/random_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none" >
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/layout3" >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/score3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="@string/score_3"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/static_text" />

            <Spinner
                android:id="@+id/editScore3"
                android:layout_width="75dp"
                android:layout_height="42dp"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/random_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none" >
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/score4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="@string/score_4"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/static_text" />

            <Spinner
                android:id="@+id/editScore4"
                android:layout_width="75dp"
                android:layout_height="42dp"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/random_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none" >
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/layout4" >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/score5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="@string/score_5"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/static_text" />

            <Spinner
                android:id="@+id/editScore5"
                android:layout_width="75dp"
                android:layout_height="42dp"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/random_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none" >
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/score6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="@string/score_6"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/static_text" />

            <Spinner
                android:id="@+id/editScore6"
                android:layout_width="75dp"
                android:layout_height="42dp"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/random_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none" >
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/layout5" >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/score7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="@string/score_7"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/static_text" />

            <Spinner
                android:id="@+id/editScore7"
                android:layout_width="75dp"
                android:layout_height="42dp"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/random_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none" >
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="@string/score_6"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/static_text"
                android:visibility="invisible"/>

            <Spinner
                android:layout_width="75dp"
                android:layout_height="38dp"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/random_text"
                android:scrollbarStyle="insideInset"
                android:scrollbars="none"
                android:visibility="invisible">
            </Spinner>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonScore"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout6"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/total"
            android:textSize="@dimen/button_text"
            android:textColor="@color/button_text"
            style="@android:style/Widget.Holo.Button"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>

</ScrollView>

