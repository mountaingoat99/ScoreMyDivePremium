<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:paddingRight="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/layer_card_background">

        <TextView
            android:id="@+id/TextViewChange"
            android:text="@string/change_dive_scores"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/secondary_text"
            android:background="@color/primary_light"/>

        <Spinner
            android:id="@+id/spinnerDiveNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:prompt="@string/choose_dive_number" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:paddingRight="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/layer_card_background">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary_light">

            <TextView
                android:id="@+id/dbName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/diver_name"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/secondary_text"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/divername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/dbName"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/dbName"
                android:layout_toEndOf="@id/dbName"
                android:text=""
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/primary_text"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/dbMeet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dbName"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/meet_name"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/secondary_text"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/meetname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/dbMeet"
                android:layout_below="@id/divername"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/dbName"
                android:layout_toEndOf="@+id/dbName"
                android:text=""
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/primary_text"
                android:background="@color/primary_light"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:paddingRight="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/layer_card_background">

        <LinearLayout
            android:id="@+id/layouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/primary_light"
            android:visibility="gone">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/total2view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/score_total"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/secondary_text"
                android:visibility="invisible"
                android:background="@color/primary_light"/>

            <EditText
                android:id="@+id/scoreTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/primary_text"
                android:inputType="numberDecimal"
                android:visibility="invisible"
                android:maxLength="6"
                android:background="@color/primary_light"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/failedView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/failed"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/secondary_text"
                android:visibility="invisible"
                android:background="@color/primary_light"/>

            <TextView
                android:id="@+id/failedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/primary_text"
                android:maxLength="1"
                android:visibility="invisible"
                android:background="@color/primary_light"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/primary_light"/>

        </LinearLayout>

        <View
            android:id="@+id/View3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/layouts"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:background="@color/primary_light"/>

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/View3"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:background="@color/primary_light">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:layout_marginTop="8dp"
                android:background="@color/primary_light">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/primary_light"/>

                <TextView
                    android:id="@+id/score1view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="@string/dive_1"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/secondary_text"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <EditText
                    android:id="@+id/score1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/primary_text"
                    android:inputType="numberDecimal"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/primary_light"/>

                <TextView
                    android:id="@+id/score2view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="@string/dive_2"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/secondary_text"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <EditText
                    android:id="@+id/score2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/primary_text"
                    android:inputType="numberDecimal"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/primary_light"/>

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:layout_marginTop="8dp"
                android:background="@color/primary_light">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/primary_light"/>

                <TextView
                    android:id="@+id/score3view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="@string/dive_3"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/secondary_text"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <EditText
                    android:id="@+id/score3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/primary_text"
                    android:inputType="numberDecimal"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/primary_light"/>

                <TextView
                    android:id="@+id/score4view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="@string/dive_4"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/secondary_text"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <EditText
                    android:id="@+id/score4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/primary_text"
                    android:inputType="numberDecimal"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/primary_light"/>

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:layout_marginTop="8dp"
                android:background="@color/primary_light">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/primary_light"/>

                <TextView
                    android:id="@+id/score5view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="@string/dive_5"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/secondary_text"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <EditText
                    android:id="@+id/score5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/primary_text"
                    android:inputType="numberDecimal"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/primary_light"/>

                <TextView
                    android:id="@+id/score6view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="@string/dive_6"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/secondary_text"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <EditText
                    android:id="@+id/score6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/primary_text"
                    android:inputType="numberDecimal"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/primary_light"/>

            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:background="@color/primary_light">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/primary_light"/>

                <TextView
                    android:id="@+id/score7view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="@string/dive_7"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/secondary_text"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <EditText
                    android:id="@+id/score7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/primary_text"
                    android:inputType="numberDecimal"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/primary_light"/>

                <TextView
                    android:id="@+id/fake1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="@string/failed"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/secondary_text"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <EditText
                    android:id="@+id/fake2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/primary_text"
                    android:inputType="text"
                    android:digits="pfPF"
                    android:maxLength="1"
                    android:capitalize="characters"
                    android:visibility="invisible"
                    android:background="@color/primary_light"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/primary_light"/>

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tableLayout1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@color/primary_light">

            <Button
                android:id="@+id/buttonChangeScore"
                android:text="@string/update_score"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/primary"
                android:visibility="gone"/>

            <Button
                android:id="@+id/buttonReturn"
                android:text="@string/return_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/primary"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>


