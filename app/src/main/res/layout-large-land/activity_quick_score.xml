                            android:textColor="@color/primary"
                            android:longClickable="true"
                            android:background="@color/primary_light"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@color/primary_light"/>

                        <TextView
