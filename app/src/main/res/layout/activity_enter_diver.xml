<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="NotSibling" >

    <TextView
        android:id="@+id/EnterMeetM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/header"
        android:gravity="center"
        android:text="@string/enter_new_diver_info"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/header_text"/>

    <EditText
        android:id="@+id/editTextNameE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EnterMeetM"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/enterNameN"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginRight="8dp"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/random_text">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/enterNameN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextNameE"
        android:layout_marginLeft="8dp"
        android:text="@string/name"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/static_text"/>
    
    <EditText
        android:id="@+id/editTextAgeN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextNameE"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/enterNameN"
        android:ems="10"
        android:inputType="number"
        android:layout_marginRight="8dp"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/random_text">

    </EditText>

    <TextView
        android:id="@+id/enterAgeN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextAgeN"
        android:layout_alignLeft="@+id/EnterMeetM"
        android:text="@string/age"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/static_text"/>
    
    <EditText
        android:id="@+id/editTextGradeN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextAgeN"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/enterNameN"
        android:ems="10"
        android:inputType="text"
        android:layout_marginRight="8dp"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/random_text">

    </EditText>

    <TextView
        android:id="@+id/enterGradeN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextGradeN"
        android:layout_marginLeft="8dp"
        android:text="@string/grade"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/static_text"/>
    
    <EditText
        android:id="@+id/editTextSchoolN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextGradeN"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/enterNameN"
        android:ems="10"
        android:inputType="text"
        android:layout_marginRight="8dp"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/random_text">

    </EditText>

    <TextView
        android:id="@+id/enterSchoolN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextSchoolN"
        android:layout_marginLeft="8dp"
        android:text="@string/school"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/static_text"/>

    <Button
        android:id="@+id/buttonDiverEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextSchoolN"
        android:text="@string/enter"
        android:textSize="@dimen/button_text"
        android:textColor="@color/button_text"
        style="@android:style/Widget.Holo.Button"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
